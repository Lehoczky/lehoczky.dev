---
import Picture from "astro/components/Picture.astro"
import type { HTMLAttributes } from "astro/types"

import meImage from "@/assets/images/me.jpeg"
import DotPattern from "@/modules/shared/components/DotPattern.vue"
import Link from "@/modules/shared/components/Link.vue"
import { cn } from "@/modules/shared/libs/cn"

export interface Props extends HTMLAttributes<"div"> {}

const { class: className, ...attrs } = Astro.props
---

<div class={cn("relative", className)} {...attrs}>
  <section
    class="relative container flex min-h-[80vh] flex-col items-center justify-between gap-6 py-20 lg:flex-row-reverse"
  >
    <Picture
      src={meImage}
      quality={100}
      width={340}
      formats={["avif", "webp"]}
      loading={"eager"}
      fetchpriority={"high"}
      alt={"My profile picture"}
      pictureAttributes={{ class: "" }}
      data-sal="zoom-in"
      data-sal-duration="300"
      data-sal-easing="ease-out-sine"
      class="w-[280px] rounded-full border-2 border-neutral-800 sm:w-[340px]"
    />

    <div
      class="flex flex-col items-center text-center lg:items-start lg:text-left"
    >
      <h1
        class="mb-4 text-6xl font-semibold"
        data-sal="slide-up"
        data-sal-duration="700"
      >
        Zoltan Lehoczky
      </h1>
      <div
        class="mb-8 max-w-lg text-2xl text-neutral-400"
        data-sal="slide-up"
        data-sal-duration="500"
        data-sal-delay="200"
      >
        Frontend Developer with more than 6 years of professional experience.
      </div>
      <ul
        class="flex flex-wrap items-start justify-center gap-x-6 gap-y-2 px-4 lg:flex-col lg:gap-x-1.5 lg:gap-y-1.5 lg:px-0"
      >
        <li data-sal="slide-up" data-sal-duration="500" data-sal-delay="300">
          <Link
            href="https://github.com/Lehoczky"
            aria-label="GitHub profile"
            target="_blank"
            class="flex items-center gap-3 text-lg"
          >
            <span class="i-bxl-github text-3xl"></span>
            <span>Lehoczky</span>
          </Link>
        </li>

        <li data-sal="slide-up" data-sal-duration="500" data-sal-delay="350">
          <Link
            href="https://www.linkedin.com/in/zolt%C3%A1n-lehoczky-bb32aa188/"
            aria-label="LinkedIn profile"
            target="_blank"
            class="flex items-center gap-3 text-lg"
          >
            <span class="i-bxl-linkedin text-3xl"></span>
            <span>zolt√°n-lehoczky-bb32aa188</span>
          </Link>
        </li>

        <li data-sal="slide-up" data-sal-duration="500" data-sal-delay="400">
          <Link
            href="mailto:ifjlehoczkyzoltan@gmail.com"
            target="_blank"
            class="flex items-center gap-3 text-lg"
          >
            <span class="i-lucide-mail text-3xl"></span>
            <span>ifjlehoczkyzoltan@gmail.com</span>
          </Link>
        </li>
      </ul>
    </div>
  </section>

  <DotPattern
    class="absolute top-0 left-0 -z-40 h-1/2 w-1/2 translate-y-1 mask-[linear-gradient(to_bottom_right,white,transparent,transparent)]"
  />
  <DotPattern
    class="absolute right-0 bottom-0 -z-40 h-full w-1/3 mask-[linear-gradient(to_bottom_right,transparent,transparent,white)]"
  />
</div>
