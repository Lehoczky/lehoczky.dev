---
import type { HTMLAttributes } from "astro/types"

import { cn } from "@/modules/shared/libs/cn"

export interface Props extends HTMLAttributes<"a"> {}

const { class: className, ...attrs } = Astro.props
---

<a
  class={cn(
    "transition duration-700 ease-spring will-change-transform focus-visible:ring-2 focus-visible:ring-green-500 focus-visible:ring-offset-0 focus-visible:ring-offset-neutral-900 focus-visible:outline-hidden hocus:scale-125 hocus:text-green-500",
    className,
  )}
  {...attrs}
>
  <slot />
</a>
