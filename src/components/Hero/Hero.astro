---
import Picture from "astro/components/Picture.astro"

import meImage from "@/assets/images/me.jpeg"

import DotPattern from "../DotPattern.vue"
import Link from "../Link.vue"
---

<div class="relative">
  <section
    class="container flex-col lg:flex-row-reverse gap-6 flex justify-between items-center py-20 min-h-[80vh] relative"
  >
    <Picture
      src={meImage}
      quality={100}
      width={340}
      formats={["avif", "webp"]}
      loading={"eager"}
      alt={"My profile picture"}
      pictureAttributes={{ class: "" }}
      class="rounded-full border-2 border-neutral-800 animate-appear w-[280px] sm:w-[340px]"
    />

    <div
      class="text-center lg:text-left flex flex-col items-center lg:items-start"
    >
      <h1 class="text-6xl font-semibold mb-4">Zoltan Lehoczky</h1>
      <div class="text-neutral-400 text-2xl max-w-lg mb-8">
        Frontend Developer with more than 6 years of professional experience.
      </div>
      <div
        class="flex lg:flex-col lg:gap-x-1.5 lg:gap-y-1.5 items-start flex-wrap gap-x-6 gap-y-2 justify-center px-4 lg:px-0"
      >
        <Link
          href="https://github.com/Lehoczky"
          aria-label="GitHub profile"
          target="_blank"
          class="flex items-center gap-3 text-lg"
        >
          <span class="i-bxl-github text-3xl"></span>
          <span>Lehoczky</span>
        </Link>
        <Link
          href="https://www.linkedin.com/in/zolt%C3%A1n-lehoczky-bb32aa188/"
          aria-label="LinkedIn profile"
          target="_blank"
          class="flex items-center gap-3 text-lg"
        >
          <span class="i-bxl-linkedin text-3xl"></span>
          <span>zolt√°n-lehoczky-bb32aa188</span>
        </Link>
        <Link
          href="mailto:ifjlehoczkyzoltan@gmail.com"
          target="_blank"
          class="flex items-center gap-3 text-lg"
        >
          <span class="i-lucide-mail text-3xl"></span>
          <span>ifjlehoczkyzoltan@gmail.com</span>
        </Link>
      </div>
    </div>
  </section>

  <DotPattern
    class="absolute top-0 left-0 w-1/2 h-1/2 [mask-image:linear-gradient(to_bottom_right,white,transparent,transparent)] translate-y-1 -z-40"
  />
  <DotPattern
    class="absolute bottom-0 right-0 w-1/3 h-full [mask-image:linear-gradient(to_bottom_right,transparent,transparent,white)] -z-40"
  />
</div>
