---
import Link from "./Link.vue"
---

<header
  class="shadow-lg border-b border-neutral-800 sticky top-0 backdrop-blur-lg bg-neutral-900 bg-opacity-80"
>
  <div class="container flex justify-between items-center h-20">
    <Link href="/" class="text-lg tracking-widest">lehoczky.dev</Link>

    <div class="text-3xl leading-none flex gap-2.5">
      <a
        href="https://github.com/Lehoczky"
        aria-label="GitHub profile"
        class="hover:text-green-500 transition-colors duration-200"
        target="_blank"
      >
        <span class="i-bxl-github"></span>
      </a>
      <a
        href="https://www.linkedin.com/in/zolt%C3%A1n-lehoczky-bb32aa188/"
        aria-label="LinkedIn profile"
        class="hover:text-green-500 transition-colors duration-200"
        target="_blank"
      >
        <span class="i-bxl-linkedin"></span>
      </a>
    </div>
  </div>
</header>
